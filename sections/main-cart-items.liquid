<script>
  function addtocart(originalProductId, newProductId, forloopindexId) {
    document.getElementById("changeitemcart").disabled = true;
    document.getElementById("changeitemcart").innerText = "Loading...";

    const productIndex = forloopindexId -1;

    fetch("/cart.js")
      .then((response) => response.json())
      .then((cart) => {
        const newProduct = {
          ...cart.items[productIndex],
          variant_id: newProductId,
          quantity: 1,
        };

        fetch("/cart/change.js", {
          method: "POST",
          body: JSON.stringify({ line: forloopindexId, quantity: 0 }),
          credentials: "same-origin",
          headers: {
            "Content-Type": "application/json",
          },
        })
        .then((response) => response.json())
        .then((data) => {
          console.log('ORIGINAL PRODUCT REMOVED', data);

          fetch("/cart/add.js", {
            method: "POST",
            body: JSON.stringify({
              id: newProduct.variant_id,
              quantity: newProduct.quantity,
              properties: newProduct.properties,
            }),
            headers: {
              "Content-Type": "application/json",
            },
          })
          .then((response) => response.json())
          .then((updatedCart) => {
            console.log("Cart updated:", updatedCart);
            setTimeout(() => {
              location.reload();
            }, 500);
          })
          .catch((error) => {
            console.error("Error when updating the cart:", error);
          });
        })
        .catch((error) => {
          console.error(error);
        });
      })
      .catch((error) => {
        console.error("Error when obtaining the cart:", error);
      });
  }
</script>

