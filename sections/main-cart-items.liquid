<script>
  function removeCartItem(event) {
    event.preventDefault();
    var removeLink = event.target.closest('a');
    var cartUrl = removeLink.getAttribute('href');

    var xhr = new XMLHttpRequest();
    xhr.open('GET', cartUrl, true);
    xhr.onload = function() {
      if (xhr.status === 200) {
        setTimeout(function() {
          window.location.reload();
        }, 2000);
      }
    };
    xhr.send();
  }
</script>

